@model IndexViewModel

<div class="row">
  <div class="col">
    <h2 class="text-center">Register</h2>
  </div>
  <div class="col">
    <h2 class="text-center">Login</h2>
  </div>
</div>
<div class="row">
  <div class="col">
    <form asp-action="Register" method="post">
      <label asp-for="NewUser.FirstName">First Name</label>
      <div>
        <span class="text-danger field-validation-valid" asp-validation-for="NewUser.FirstName"></span>
      </div>
      <input asp-for="NewUser.FirstName" class="form-control">

      <label asp-for="NewUser.LastName" class="mt-3">Last Name</label>
      <div>
        <span class="text-danger field-validation-valid" asp-validation-for="NewUser.LastName"></span>
      </div>
      <input asp-for="NewUser.LastName" class="form-control">

      <label asp-for="NewUser.EmailAddress" class="mt-3">Email Address</label>
      <div>
        <span class="text-danger field-validation-valid" asp-validation-for="NewUser.EmailAddress"></span>
      </div>
      <input asp-for="NewUser.EmailAddress" class="form-control">

      <label asp-for="NewUser.Password" class="mt-3">Password</label>
      <div>
        <span class="text-danger field-validation-valid" asp-validation-for="NewUser.Password"></span>
      </div>
      <input asp-for="NewUser.Password" class="form-control">

      <label asp-for="NewUser.ConfirmPassword" class="mt-3">Confrim Password</label>
      <div>
        <span class="text-danger field-validation-valid" asp-validation-for="NewUser.ConfirmPassword"></span>
      </div>
      <input asp-for="NewUser.ConfirmPassword" class="form-control">

      <button class="btn btn-primary mt-3" type="submit">Sign up</button>
    </form>
  </div>
  <div class="col">
    <form asp-action="Login" method="post">
      <label asp-for="User.EmailAddress">Email Address</label>
      <div>
        <span class="text-danger field-validation-valid" asp-validation-for="User.EmailAddress"></span>
      </div>
      <input asp-for="User.EmailAddress" class="form-control">

      <label asp-for="User.Password" class="mt-3">Password</label>
      <div>
        <span class="text-danger field-validation-valid" asp-validation-for="User.Password"></span>
      </div>
      <input asp-for="User.Password" class="form-control">

      <button class="btn btn-primary mt-3" type="submit">Login</button>

    </form>
  </div>
</div>